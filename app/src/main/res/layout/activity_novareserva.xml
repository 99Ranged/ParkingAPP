<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/novareserva"
    tools:context="com.example.keke.parkingsys.homev3"
    android:id="@+id/mainlayout"
    android:orientation="vertical">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
        <!-- This FrameLayout insets its children based on system windows using
             android:fitsSystemWindows. -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <Button
                android:text="@string/Btn_addreserva"
                android:textColor="#FFFFFF"
                android:background="#202c65"

                android:layout_width="match_parent"
                android:id="@+id/Btn_addreserva"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="40dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                tools:context="com.example.keke.parkingsys.homev3"
                android:id="@+id/mainlayout2"
                android:orientation="vertical"
                android:weightSum="1">


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Spn_parques"
                    android:layout_marginTop="105dp"
                    android:layout_marginLeft="120dp"
                    android:textAlignment="center"
                   />
            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_MoradaParque"
                    android:layout_marginLeft="150dp"
                    android:textAlignment="center"


                    android:textAllCaps="true" />
            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Joao Balao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_NomeCliente"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="130dp"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textAllCaps="true"
                    android:textAlignment="center"

                    android:layout_centerHorizontal="true" />
            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Spn_veiculos"

                    android:layout_marginLeft="130dp"
                    android:textAlignment="center"
                    />

            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tempoinicio"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:text="@string/Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tempofim"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="190dp"/>
            </GridLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_DataInicio"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                     />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_DataFim"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="260dp"
                    />
            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:text="â‚¬"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_Preco"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="45dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:text="B8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Txt_Lugar"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="85dp"
                    android:textAlignment="center"
                     />

                <CheckBox
                    android:text="Premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Chk_Premium"
                    android:layout_marginTop="50dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="65dp"
                     />
            </GridLayout>

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="40dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#3d3d3d"
        />


</android.support.v4.widget.DrawerLayout>
